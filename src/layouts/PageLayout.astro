---
import BaseLayout from './BaseLayout.astro';
import Nav from '../components/SiteHeader/Nav.astro';
import Footer from '../components/SiteFooter/Footer.astro';

const { title } = Astro.props.frontmatter || Astro.props;
---

<BaseLayout title={title}>
  <Nav />
  <main class="w-full max-w-screen-md mx-auto px-3 sm:px-4">
    <h1 class="text-3xl md:text-4xl font-bold text-center sm:text-left">
      {title}
    </h1>
    <hr class="page-hr" />
    <slot />
  </main>
  <Footer />
</BaseLayout>
