---
export interface Props {
  title: string;
}

import '../relay.css';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="min-h-dvh flex flex-col bg-white dark:bg-dmBlack text-black dark:text-dmWhite"
  >
    <slot />
  </body>
</html>
