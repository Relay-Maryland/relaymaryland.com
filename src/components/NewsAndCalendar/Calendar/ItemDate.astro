---
interface Props {
  date: Date;
}

import { relayDate, shortMonthName } from '../../../utils.mjs';

const { date } = Astro.props;

const _date = relayDate(date);
const datetime = _date.toISOString().slice(0, 10);
const day = _date.getDate();
const month = shortMonthName(_date).toUpperCase();
---

<time class="flex flex-col items-center" datetime={datetime}>
  <span class="text-2xl md:text-3xl leading-none">{day}</span>
  <span class="md:text-lg leading-none">{month}</span>
</time>
