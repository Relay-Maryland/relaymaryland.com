---
import contact from '../data/contact.mjs';
---

<style>
  address {
    @apply flex flex-col items-start gap-y-2 md:gap-y-4;
    @apply text-base lg:text-xl not-italic;
  }

  .icon {
    @apply relative;
    @apply ml-6 lg:ml-8;

    &::before {
      content: '';
      @apply -left-6 lg:-left-8 top-[3px];
      background-repeat: no-repeat;
      @apply w-5 h-5 lg:w-6 lg:h-6;
      @apply absolute inline-block;
    }

    /* See backgroundImage extensions in tailwind.config.mjs */
    &.location::before {
      @apply bg-location dark:bg-locationWhite;
    }

    &.envelope::before {
      @apply bg-envelope dark:bg-envelopeWhite;
    }

    &.phone::before {
      @apply bg-phone dark:bg-phoneWhite;
    }

    &.fb::before {
      @apply bg-fb dark:bg-fbWhite;
    }

    &.ig::before {
      @apply bg-ig dark:bg-igWhite;
    }
  }
</style>

<address>
  <div class="icon location">
    <span class="block">{contact.address.street}</span>
    <span
      >{contact.address.city}, {contact.address.state.long}&nbsp;
      {contact.address.zip}</span
    >
  </div>
  <a class="icon envelope" href={`mailto:${contact.email}`}>{contact.email}</a>
  <a class="icon fb" href={contact.facebook.full}
    >facebook.com/{contact.facebook.id}</a
  >
  <a class="icon ig" href={contact.instagram.full}
    >instagram.com/{contact.instagram.id}</a
  >
  <a class="icon phone" href={`tel:${contact.phone.Frank}`}
    >{contact.phone.Frank}</a
  >
</address>
